<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textSize="36sp"
                android:textColor="@color/main_color"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:layout_marginTop="35dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/icon_person"
                android:drawablePadding="8dp"
                android:hint="Tên người dùng"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/icon_email"
                android:drawablePadding="8dp"
                android:hint="Email"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/icon_name"
                android:drawablePadding="8dp"
                android:hint="Họ tên"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:background="@drawable/input_border"
                android:gravity="center">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:hint="Giới tính"
                    android:textSize="18sp"
                    android:textColor="@color/input_border"
                    android:drawableLeft="@drawable/icon_gender"
                    android:drawablePadding="8dp"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:text="Nam"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/input_border"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:text="Nữ"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/input_border"
                        android:textSize="18sp"/>
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/input_birthday"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_border"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/icon_calender"
                android:drawablePadding="8dp"
                android:hint="Ngày sinh"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lưu"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/main_color"
                app:cornerRadius="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quay lại"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/lavender"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>